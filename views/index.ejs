<%- include("templates/header") %>
    <%- include("templates/navbar") %>
        <div class="p-4">
            <% if (!user) { %>
                <!-- Not logged in -->
                <div class="h-screen flex flex-col justify-center items-center text-center">
                    <!-- Application Overview -->
                    <h1 class="text-3xl font-bold mb-4">Welcome to Your Allergy Guard!</h1>
                    <p class="text-lg text-gray-700 mb-6">
                        Stay safe and confident with AllergyGuard. <br />
                        Register your allergens, scan food labels with OCR, and get instant alerts for risky
                        ingredients. <br />
                        Manage your list and review scan history—anytime, anywhere. <br />
                    </p>

                    <div>
                        <p class="text-sm font-light text-gray-500">
                            Continue with <a href="/login" class="text-blue-500 hover:underline">Login</a>
                        </p>
                    </div>

                    <div class="flex items-center text-gray-400 my-4">
                        <div class="flex-grow border-t border-gray-300"></div>
                        <span class="px-4">or</span>
                        <div class="flex-grow border-t border-gray-300"></div>
                    </div>

                    <div>
                        <p class="text-sm font-light text-gray-500">
                            Don’t have an account yet? <a href="/signup" class="text-blue-500 hover:underline">Sign
                                up</a>
                        </p>
                    </div>
                </div>

                <% } else { %>

                    <!-- Logged-in Dashboard -->
                    <section class="max-w-4xl mx-auto space-y-8">

                        <!-- Greeting -->
                        <header>
                            <h1 class="text-2xl font-bold">Hello, <%= user.email %>
                            </h1>
                            <p class="text-sm text-gray-500">Welcome back to AllergyGuard.</p>
                        </header>

                        <!-- My Allergy section -->
                        <section>
                            <div class="flex items-center justify-between mb-2">
                                <h2 class="text-xl font-semibold">My Allergy</h2>
                                <a href="/myAllergy" class="text-blue-600 hover:underline text-sm">Manage</a>
                            </div>

                            <!-- TODO: Replace with dynamic allergies -->
                            <ul class="flex flex-wrap gap-2">
                                <li class="px-3 py-1 rounded-full bg-gray-100 border text-sm">Peanut</li>
                                <li class="px-3 py-1 rounded-full bg-gray-100 border text-sm">Milk</li>
                                <li class="px-3 py-1 rounded-full bg-gray-100 border text-sm">Shellfish</li>
                            </ul>
                        </section>

                        <!-- History section -->
                        <section>
                            <div class="flex items-center justify-between mb-2">
                                <h2 class="text-xl font-semibold">Recent History</h2>
                                <a href="/scan-history" class="text-blue-600 hover:underline text-sm">View all</a>
                            </div>

                            <!-- TODO: Replace with dynamic history -->
                            <ul class="divide-y border rounded">
                                <li class="p-3 flex items-center justify-between">
                                    <div>
                                        <p class="text-sm text-gray-700">Nov 2, 2025 — Matched: Peanut</p>
                                    </div>
                                    <a href="#" class="text-xs text-gray-500 hover:underline">image</a>
                                </li>
                                <li class="p-3 flex items-center justify-between">
                                    <div>
                                        <p class="text-sm text-gray-700">Nov 1, 2025 — No matches</p>
                                    </div>
                                    <a href="#" class="text-xs text-gray-500 hover:underline">image</a>
                                </li>
                            </ul>
                        </section>

                        <!-- Bottom: Scan button -->
                        <div class="pt-2 pb-6">
                            <a href="/scan"
                                class="block w-full md:w-auto text-center bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded shadow">
                                Scan Now
                            </a>
                        </div>

                    </section>
                    <% } %>
        </div>

        <%- include("templates/deleteModal") %>
            <%- include("templates/footer") %>