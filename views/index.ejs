<%- include("templates/header") %>
    <%- include("templates/navbar") %>
        <div class="p-4">
            <% if (!user) { %>
                <!-- Not logged in -->
                <div class="h-screen flex flex-col justify-center items-center text-center">
                    <!-- Application Overview -->
                    <h1 class="text-3xl font-bold mb-4">Welcome to Your Allergy Guard!</h1>
                    <p class="text-lg text-gray-700 mb-6">
                        Stay safe and confident with AllergyGuard. <br />
                        Register your allergens, scan food labels with OCR, and get instant alerts for risky
                        ingredients. <br />
                        Manage your list and review scan history‚Äîanytime, anywhere. <br />
                    </p>

                    <div>
                        <p class="text-sm font-light text-gray-500">
                            Continue with <a href="/login" class="text-blue-500 hover:underline">Login</a>
                        </p>
                    </div>

                    <div class="flex items-center text-gray-400 my-4">
                        <div class="flex-grow border-t border-gray-300"></div>
                        <span class="px-4">or</span>
                        <div class="flex-grow border-t border-gray-300"></div>
                    </div>

                    <div>
                        <p class="text-sm font-light text-gray-500">
                            Don‚Äôt have an account yet? <a href="/signup" class="text-blue-500 hover:underline">Sign
                                up</a>
                        </p>
                    </div>
                </div>

                <% } else { %>

                    <!-- Logged-in Dashboard -->
                    <section class="max-w-4xl mx-auto space-y-8">

                        <!-- Greeting -->
                        <header>
                            <h1 class="text-2xl font-bold">Hello, <%= user.username %>
                            </h1>
                            <p class="text-sm text-gray-500">Welcome back to AllergyGuard.</p>
                        </header>

                        <!-- My Allergy section -->
                        <section>
                            <div class="flex items-center justify-between mb-2">
                                <h2 class="text-xl font-semibold">My Allergy</h2>
                                <a href="/myAllergy" class="text-blue-600 hover:underline text-sm">Manage</a>
                            </div>

                            <ul class="flex flex-wrap gap-2">
                                <% if (typeof allergies==='undefined' || allergies.length===0) { %>
                                    <li class="text-sm text-gray-500">No allergies added yet.</li>
                                    <% } else { %>
                                        <% allergies.forEach(function(a){ %>
                                            <li class="px-3 py-1 rounded-full bg-gray-100 border text-sm">
                                                <%= a.allergen %>
                                            </li>
                                            <% }) %>
                                                <% } %>
                            </ul>
                        </section>

                        <!-- History section -->
                        <section>
                            <div class="flex items-center justify-between mb-2">
                                <h2 class="text-xl font-semibold">Recent History</h2>
                                <a href="/scan-history" class="text-blue-600 hover:underline text-sm">View all</a>
                            </div>

                            <% if (!history || history.length===0) { %>
                                <p class="text-sm text-gray-500">No history yet.</p>
                                <% } else { %>
                                    <ul class="divide-y border rounded">
                                        <% history.forEach(function(h){ %>
                                            <li class="p-3 flex items-center justify-between">
                                                <div>
                                                    <p class="text-sm text-gray-700">
                                                        <%= new Date(h.createdAt.toDate()).toLocaleDateString() %> ‚Äî
                                                            <% if (h.matched && h.matched.length> 0) { %>
                                                                ‚ö†Ô∏èMatched: <%= h.matched.join(", ") %>
                                      <% } else { %>
                                        No matches
                                      <% } %>
                                    </p>
                                  </div>
                                  <a href=" /scan-history/<%=h.id %>" class="text-xs text-gray-500
                                                                    hover:underline">details</a>
                                            </li>
                                            <% }) %>
                                    </ul>
                                    <% } %>
                        </section>

                        <!-- Bottom: Scan button -->
                        <div class="pt-2 pb-6">
                            <a href="/scan"
                                class="w-full md:w-auto text-center bg-black hover:bg-gray-800 text-white font-semibold px-6 py-3 rounded shadow">
                                Scan
                            </a>
                        </div>

                        <!-- Government Allergy Resources -->
                        <section>
                            <h2 class="text-xl font-semibold mb-4">BC Allergy & Food Safety Resources</h2>

                            <div class="grid gap-4 md:grid-cols-2">
                                <!-- BC CDC -->
                                <div
                                    class="p-4 border rounded-lg shadow hover:shadow-md bg-white flex flex-col justify-between">
                                    <div>
                                        <h3 class="text-lg font-medium flex items-center gap-2">
                                            üåø Common food allergens
                                        </h3>
                                        <p class="text-sm text-gray-600 mt-2">
                                            Canadian health authorities and experts have identified the main substances
                                            most commonly linked to food allergies and
                                            allergic reactions.
                                        </p>
                                    </div>
                                    <a href="https://www.canada.ca/en/health-canada/services/food-nutrition/food-safety/food-allergies-intolerances/food-allergies.html"
                                        target="_blank"
                                        class="mt-3 inline-block text-blue-600 hover:underline text-sm font-medium">
                                        Visit site ‚Üí
                                    </a>
                                </div>

                                <!-- HealthLink BC -->
                                <div
                                    class="p-4 border rounded-lg shadow hover:shadow-md bg-white flex flex-col justify-between">
                                    <div>
                                        <h3 class="text-lg font-medium flex items-center gap-2">
                                            üè• HealthLink BC
                                        </h3>
                                        <p class="text-sm text-gray-600 mt-2">
                                            Trusted information on food allergies, symptoms, and management. Available
                                            in
                                            multiple languages.
                                        </p>
                                    </div>
                                    <a href="https://www.healthlinkbc.ca/illnesses-conditions/food-allergy"
                                        target="_blank"
                                        class="mt-3 inline-block text-blue-600 hover:underline text-sm font-medium">
                                        Visit site ‚Üí
                                    </a>
                                </div>

                                <!-- Allergy Foundation of Canada -->
                                <div
                                    class="p-4 border rounded-lg shadow hover:shadow-md bg-white flex flex-col justify-between">
                                    <div>
                                        <h3 class="text-lg font-medium flex items-center gap-2">
                                            ü§ù Allergy Foundation of Canada
                                        </h3>
                                        <p class="text-sm text-gray-600 mt-2">
                                            Support programs, education, and advocacy for Canadians living with
                                            allergies.
                                        </p>
                                    </div>
                                    <a href="https://www.allergyfoundation.ca/" target="_blank"
                                        class="mt-3 inline-block text-blue-600 hover:underline text-sm font-medium">
                                        Visit site ‚Üí
                                    </a>
                                </div>

                                <!-- Food Allergy Canada -->
                                <div
                                    class="p-4 border rounded-lg shadow hover:shadow-md bg-white flex flex-col justify-between">
                                    <div>
                                        <h3 class="text-lg font-medium flex items-center gap-2">
                                            üçÅ Food Allergy Canada
                                        </h3>
                                        <p class="text-sm text-gray-600 mt-2">
                                            National resources, community stories, and campaigns to raise awareness
                                            about
                                            food allergies.
                                        </p>
                                    </div>
                                    <a href="https://foodallergycanada.ca/" target="_blank"
                                        class="mt-3 inline-block text-blue-600 hover:underline text-sm font-medium">
                                        Visit site ‚Üí
                                    </a>
                                </div>
                            </div>
                        </section>

                    </section>


                    <% } %>
        </div>

        <%- include("templates/deleteModal") %>
            <%- include("templates/footer") %>