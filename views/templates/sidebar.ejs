<aside id="logo-sidebar"
    class="hidden md:block fixed top-0 left-0 z-40 h-screen pt-18 transition-transform -translate-x-full bg-theme-bg sm:translate-x-0"
    aria-label="Sidebar">
    <div class="h-full px-4 py-4 overflow-y-auto flex flex-col justify-between">

        <!-- Logo -->
        <ul>
            <a href="/" class="">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                    <text x="12" y="18" font-family="Arial, sans-serif" font-size="5" text-anchor="middle"
                        fill="currentColor">♡</text>
